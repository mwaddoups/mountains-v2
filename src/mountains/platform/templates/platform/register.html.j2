{% extends "platform/base.html.j2" %}
{% block platform %}
  <section>
    <h1>User Editor</h1>
    <form method="post" action="{{ url_for('platform.register') }}">
      <label>
        Email
        <input type="email" name='email' required />
      </label>
      <label>
        First Name
        <input type="text" name='first_name' required />
      </label>
      <label>
        Last Name
        <input type="text" name='last_name' required />
      </label>
      <label>
        About You
        <textarea name='about' placeholder="Write a bit about yourself..."></textarea>
      </label>
      <input type="submit" value="Register" />
    </form>
  </section>
{% endblock platform %}
