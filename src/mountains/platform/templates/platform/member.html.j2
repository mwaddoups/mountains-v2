{% from "platform/_profile.html.j2" import profile_picture, badge %}
{% extends "platform/base.html.j2" %}
{% block platform %}
  <figure class="float-right">
    {{ profile_picture(user, "256") }}
  </figure>
  <div class="flex">
    <h1>
      {{ user.full_name }}
      {% if g.current_user.id == user.id %}<a href="{{ url_for('platform.edit_member', id=user.id) }}">Edit</a>{% endif %}
    </h1>
    {% if g.current_user.is_site_admin %}
      <details class="admin">
        <summary>Admin</summary>
        <div>
          <form>
            <input type="submit" value="Toggle something" />
            <input type="submit" value="Toggle something else" />
          </form>
          <span>Email: {{ user.email }}</span>
          <span>Membership expires: {{ user.membership_expiry_utc.strftime("%Y-%m-%d") }}</span>
        </div>
      </details>
    {% endif %}
  </div>
  <p>
    <mark>{{ user.mobile }}</mark> Discord
  </p>
  <div class="flex">
    {% if user.is_committee %}{{ badge("committee") }}{% endif %}
    {% if user.is_coordinator %}{{ badge("coordinator") }}{% endif %}
    {% if user.is_member %}{{ badge("member") }}{% endif %}
  </div>
  <hgroup>
    <h2>About</h2>
    {% if user.about %}
      {{ user.about | markdown | safe }}
    {% else %}
      <em>No bio found!</em>
    {% endif %}
  </hgroup>
  <hgroup>
    <h2>Attended Events</h2>
    <ul>
      <li>Activity placeholder</li>
    </ul>
  </hgroup>
{% endblock platform %}
