{% from "platform/macros/profile.html.j2" import profile_picture %}
{% from "platform/macros/theme.html.j2" import badge %}
{% extends "platform/base.html.j2" %}
{% block platform %}
  <div class="flex">
    <figure>
      {{ profile_picture(user, "256") }}
    </figure>
    <div>
      <div class="flex">
        <h1>
          {{ user.full_name }}
          {% if g.current_user.id == user.id %}<a href="{{ url_for('platform.edit_member', id=user.id) }}">Edit</a>{% endif %}
        </h1>
        {% if g.current_user.is_site_admin %}
          <details class="admin">
            <summary>Admin</summary>
            <article class="card">
              <form>
                <input type="submit" value="Toggle something" />
                <input type="submit" value="Toggle something else" />
              </form>
              <span>Email: {{ user.email }}</span>
              {% if user.membership_expiry_utc %}
                <span>Membership expires: {{ user.membership_expiry_utc.strftime("%Y-%m-%d") }}</span>
              {% endif %}
            </article>
          </details>
        {% endif %}
      </div>
      <div class="flex">
        {% if user.mobile %}
          <mark>{{ user.mobile }}</mark>
        {% else %}
          <mark><small>No mobile found</small></mark>
        {% endif %}
        <mark class="discord">
          {# BI - Discord #}
          <svg xmlns="http://www.w3.org/2000/svg"
               fill="currentColor"
               viewBox="0 0 16 16">
            <path d="M13.545 2.907a13.2 13.2 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.2 12.2 0 0 0-3.658 0 8 8 0 0 0-.412-.833.05.05 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.04.04 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032q.003.022.021.037a13.3 13.3 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019q.463-.63.818-1.329a.05.05 0 0 0-.01-.059l-.018-.011a9 9 0 0 1-1.248-.595.05.05 0 0 1-.02-.066l.015-.019q.127-.095.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.05.05 0 0 1 .053.007q.121.1.248.195a.05.05 0 0 1-.004.085 8 8 0 0 1-1.249.594.05.05 0 0 0-.03.03.05.05 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.2 13.2 0 0 0 4.001-2.02.05.05 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.03.03 0 0 0-.02-.019m-8.198 7.307c-.789 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612m5.316 0c-.788 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612" />
          </svg>
          {% if discord_name %}
            {{ discord_name }}
          {% else %}
            <small>Not found on Discord</small>
          {% endif %}
          {% if user.id == g.current_user.id %}
            <a href="{{ url_for('platform.member_discord', slug=user.slug) }}"
               class="button">Change</a>
          {% elif g.current_user.is_site_admin %}
            <a href="{{ url_for('platform.member_discord', slug=user.slug) }}"
               class="button admin">Change</a>
          {% endif %}
        </mark>
      </div>
      <div class="flex flex-gap-small">
        {% if user.is_committee %}{{ badge("committee") }}{% endif %}
        {% if user.is_coordinator %}{{ badge("coordinator") }}{% endif %}
        {% if user.is_member %}{{ badge("member") }}{% endif %}
      </div>
    </div>
  </div>
  <hgroup>
    <h2>About</h2>
    {% if user.about %}
      {{ user.about | markdown | safe }}
    {% else %}
      <em>No bio found!</em>
    {% endif %}
  </hgroup>
  <hgroup>
    <h2>Attended Events</h2>
    {% if attended %}
      <ul class="member-attended">
        {% for event in attended[:num_attended] %}
          <li>
            <a href="{{ url_for('platform.event', id=event.id) }}">{{ event.title }}</a>
            <span>{{ event.event_dt.strftime("%A, %b %-d %Y") }}</span>
          </li>
        {% endfor %}
      </ul>
      {% if num_attended < attended | length %}
        <form>
          <input type="hidden" name="num_attended" value="{{ num_attended * 10 }}" />
          <button type="submit">Show more (showing {{ num_attended }} / {{ attended | length }})</button>
        </form>
      {% endif %}
    {% else %}
      <small>No events yet!</small>
    {% endif %}
  </hgroup>
{% endblock platform %}
