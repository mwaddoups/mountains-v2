{% extends "platform/base.html.j2" %}
{% block stylesheets %}
  <link rel="stylesheet"
        href="{{ url_for('static', filename='css/info.css') }}?v=1.0" />
{% endblock stylesheets %}
{% block platform %}
  <header>
    <img src="{{ url_for('static', filename='logo_256.png') }}"
         width="183"
         alt="CMC logo"
         height="100" />
    <h1>Welcome to Clyde Mountaineering Club!</h1>
  </header>
  <section>
    <h1>New to the club?</h1>
    <div class="steps">
      <a class="step color-discord" href="https://discord.gg/98K3CafRxk">
        <article>
          <span class="step-title">
            <h2>Step 1</h2>
            {# BI - Discord #}
            <svg xmlns="http://www.w3.org/2000/svg"
                 fill="currentColor"
                 viewBox="0 0 16 16">
              <path d="M13.545 2.907a13.2 13.2 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.2 12.2 0 0 0-3.658 0 8 8 0 0 0-.412-.833.05.05 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.04.04 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032q.003.022.021.037a13.3 13.3 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019q.463-.63.818-1.329a.05.05 0 0 0-.01-.059l-.018-.011a9 9 0 0 1-1.248-.595.05.05 0 0 1-.02-.066l.015-.019q.127-.095.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.05.05 0 0 1 .053.007q.121.1.248.195a.05.05 0 0 1-.004.085 8 8 0 0 1-1.249.594.05.05 0 0 0-.03.03.05.05 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.2 13.2 0 0 0 4.001-2.02.05.05 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.03.03 0 0 0-.02-.019m-8.198 7.307c-.789 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612m5.316 0c-.788 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612" />
            </svg>
          </span>
          <p>Join our Discord server</p>
          <small>We use it for everything!</small>
        </article>
      </a>
      <a class="step"
         href="{{ url_for('.member', slug=g.current_user.slug) }}">
        <article>
          <span class="step-title">
            <h2>Step 2</h2>
            {# BI - Person Square #}
            <svg xmlns="http://www.w3.org/2000/svg"
                 fill="currentColor"
                 viewBox="0 0 16 16">
              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
              <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
            </svg>
          </span>
          <p>Update your profile</p>
          <small>A photo helps so we can spot you!</small>
        </article>
      </a>
      <a class="step color-guest" href="{{ url_for('.events_calendar') }}">
        <article>
          <span class="step-title">
            <h2>Step 3</h2>
            {# BI - Calendar Heart #}
            <svg xmlns="http://www.w3.org/2000/svg"
                 fill="currentColor"
                 viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4zM1 14V4h14v10a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1m7-6.507c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132" />
            </svg>
          </span>
          <p>Try an event</p>
          <small>As a non-member you can attend up to 4 events.</small>
        </article>
      </a>
      <a class="step color-member" href="{{ url_for('.join') }}">
        <article>
          <span class="step-title">
            <h2>Step 4</h2>
            {# BI - Pencil Square #}
            <svg xmlns="http://www.w3.org/2000/svg"
                 fill="currentColor"
                 viewBox="0 0 16 16">
              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
            </svg>
          </span>
          <p>Join the club</p>
          <small>MScot membership, discounts, kit library, hut access and more...</small>
        </article>
      </a>
    </div>
    <small>
      Please note that we wish to avoid the number of prospective members getting too large - if you haven't joined the club within three months, your account will be deactivated and you will lose access to Discord.
    </small>
  </section>
  <section>
    <h1>How do events work?</h1>
    <a href="{{ url_for('platform.home', page='day-walks') }}">
      <article class="event-detail color-summer-day-walk">
        <h2>Day Walks</h2>
        <div>{{ bullet_pages['day-walks'] | markdown | safe }}</div>
      </article>
    </a>
    <a href="{{ url_for('platform.home', page='hut-weekends') }}">
      <article class="event-detail color-summer-weekend">
        <h2>Hut Trips</h2>
        <div>{{ bullet_pages['hut-weekends'] | markdown | safe }}</div>
      </article>
    </a>
    <a href="{{ url_for('platform.home', page='climbing') }}">
      <article class="event-detail color-indoor-climbing">
        <h2>Indoor Climbing</h2>
        <div>{{ bullet_pages['indoor-climbing'] | markdown | safe }}</div>
      </article>
    </a>
    <a href="{{ url_for('platform.home', page='climbing') }}">
      <article class="event-detail color-outdoor-climbing">
        <h2>Outdoor Climbing</h2>
        <div>{{ bullet_pages['outdoor-climbing'] | markdown | safe }}</div>
      </article>
    </a>
    <a href="{{ url_for('platform.home', page='running') }}">
      <article class="event-detail color-running">
        <h2>Trail Running</h2>
        <div>{{ bullet_pages['running'] | markdown | safe }}</div>
      </article>
    </a>
    <article class="event-detail color-winter-weekend">
      <h2>Winter</h2>
      <div>{{ bullet_pages['winter'] | markdown | safe }}</div>
    </article>
    <article class="event-detail color-social">
      <h2>Social</h2>
      <div>{{ bullet_pages['socials'] | markdown | safe }}</div>
    </article>
  </section>
  <section>
    <h1>Club Feedback</h1>
    <p>
      We are always happy to hear feedback and ideas. Either let us know by bringing up issues in the Discord, speaking privately to one of our committee members, or if you'd like to give feedback anonymously, use the link below.
    </p>
    <a href="https://docs.google.com/forms/d/e/1FAIpQLScz6Fn6l1XVN-G2VEz6e9mJG-_EqftuFrs_CmZbs6UtEYqw6A/viewform?usp=sf_link"
       class="button">Give Feedback</a>
  </section>
{% endblock platform %}
