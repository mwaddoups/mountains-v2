{% extends "platform/base.html.j2" %}
{% block content %}
  <a href="{{ url_for('.kit') }}">< return to Kit</a>
  <h1>New Kit Item</h1>
  <form method="post">
    {% if kit_item %}<input type="hidden" name="method" value="PUT" />{% endif %}
    <label>
      Kit ID
      <small>Identification number or tag for the kit</small>
      <input type="text" name="club_id" value="{{ kit_item.club_id }}" required />
    </label>
    <label>
      Description
      <small>Short overall item description</small>
      <input type="text" name="description" value="{{ kit_item.description }}" />
    </label>
    <label>
      Kit Category
      <select name="kit_group" required>
        {% for kit_group in kit_groups %}
          {% if kit_item and kit_item.kit_group.name == kit_group.name %}
            <option value="{{ kit_group.value }}" selected>{{ kit_group.name | replace('_', ' ') | lower | title }}</option>
          {% else %}
            <option value="{{ kit_group.value }}">{{ kit_group.name | replace('_', ' ') | lower | title }}</option>
          {% endif %}
        {% endfor %}
      </select>
    </label>
    <label>
      Gear Type
      <small>e.g. ice axe, crampon, map</small>
      <input type="text" name="kit_type" value="{{ kit_item.kit_type }}" />
    </label>
    <label>
      Brand
      <input type="text" name="brand" value="{{ kit_item.brand }}" />
    </label>
    <label>
      Colour
      <input type="text" name="color" value="{{ kit_item.color }}" />
    </label>
    <label>
      Size
      <input type="text" name="size" value="{{ kit_item.size }}" />
    </label>
    <label>
      Date Purchased
      <input type="date"
             name="purchased_on"
             value="{{ kit_item.purchased_on.isoformat() if kit_item }}" />
    </label>
    <label>
      Purchase Price (Â£)
      <input type="number"
             step="0.01"
             name="purchase_price"
             value="{{ kit_item.purchase_price }}" />
    </label>
    <input type="submit" value="Submit" />
  </form>
{% endblock content %}
