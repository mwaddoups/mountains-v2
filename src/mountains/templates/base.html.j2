{% from "platform/macros/profile.html.j2" import profile_picture %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Clyde Mountaineering Club</title>
    <meta name="description"
          content="A Glasgow mountaineering and hiking club aimed at younger people in their 20s and 30s">
    <meta name="author" content="Clyde Mountaineering Club">
    <meta name="keywords" content="mountaineering, glasgow">
    {# <link rel="shortcut icon"
       href="{{ url_for('static', filename='favicon.ico') }}"> #}
    <link rel="stylesheet"
          href="{{ url_for('static', filename='style.css') }}?v=1.0" />
    <script src="https://unpkg.com/htmx.org@2.0.4"
            integrity="sha384-HGfztofotfshcF7+8n44JQL2oJmowVChPTg48S+jvZoztPfvwD79OC/LTtG6dMp+"
            crossorigin="anonymous"></script>
    <script src="https://unpkg.com/htmx-ext-preload@2.1.0/preload.js"></script>
  </head>
  <body hx-ext="preload">
    <header class="cmc-logo">
      <nav class="cmc-logo">
        <h1>Clyde Mountaineering Club</h1>
        <ul preload>
          <li>
            <a href="{{ url_for('index') }}">Home</a>
          </li>
          <li>
            <a href="{{ url_for('faqs') }}">FAQs</a>
          </li>
          <li>
            <a href="#">Committee</a>
          </li>
          <li>
            <a href="{{ url_for('platform.home') }}">Members Area</a>
          </li>
        </ul>
        <aside>
          {% if 'current_user' in g %}
            <a href="{{ url_for('platform.member', slug=g.current_user.slug) }}">{{ g.current_user.full_name }}</a>
            {{ profile_picture(g.current_user, '32') }}
            <form method="post" action="{{ url_for('auth.logout') }}">
              <input type="submit" value="Logout" />
            </form>
          {% else %}
            <a class="button" href="{{ url_for('auth.login') }}">Login / Register</a>
          {% endif %}
        </aside>
      </nav>
    </header>
    {% block content %}
    {% endblock content %}
  </body>
</html>
